<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jenkins-ci.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>4.88</version>
    <relativePath />
  </parent>

  <properties>
    <jenkins.version>2.462.3</jenkins.version>
  </properties>

  <artifactId>visualworks-store</artifactId>
  <version>1.1.5-SNAPSHOT</version>
  <packaging>hpi</packaging>
  <name>Jenkins Visualworks Store Plugin</name>
  <description>
    Integrates Jenkins with Cincom Smalltalk Visualworks Store
  </description>
  <url>
    https://github.com/jenkinsci/visualworks-store-plugin
  </url>

  <licenses>
    <license>
      <name>The MIT license</name>
      <url>http://www.opensource.org/licenses/mit-license.php</url>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>randycoulman</id>
      <name>Randy Coulman</name>
      <email>randy@randycoulman.com</email>
    </developer>
  </developers>

  <scm>
    <connection>
      scm:git:https://git@github.com/jenkinsci/visualworks-store-plugin.git
    </connection>
    <developerConnection>
      scm:git:ssh://git@github.com/jenkinsci/visualworks-store-plugin.git
    </developerConnection>
    <url>http://github.com/jenkinsci/visualworks-store-plugin</url>
    <tag>HEAD</tag>
  </scm>

  <repositories>
    <repository>
      <id>repo.jenkins-ci.org</id>
      <url>https://repo.jenkins-ci.org/public/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>repo.jenkins-ci.org</id>
      <url>https://repo.jenkins-ci.org/public/</url>
    </pluginRepository>
  </pluginRepositories>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.apache.maven.scm</groupId>
            <artifactId>maven-scm-provider-gitexe</artifactId>
            <version>1.9</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
